<% if @searched_beers %>
   <div class="beer_index_page">
  <h1 class="header">Beer List</h1>
  <ul>
  <% @searched_beers.each do |beer| %>
    <li>
      <%= image_tag beer.image_url(:thumb) if beer.image?  %>
      <%= link_to beer.name, beer_path(beer) %>
      <%= " #{beer.brewery.name}, #{beer.description}, #{beer.beer_type.name}, #{beer.alcohol_content} | upvotes: #{beer.vote_count}" %>
      <%= button_to "Upvote", beer_votes_path(beer), params: { vote: 1 }%>
      <%= button_to "Downvote", beer_votes_path(beer), params: { vote: -1 } %>
    </li>
  <% end %>
  </ul>
  <ul class="pagination" ><%= paginate @searched_beers %>  </ul>
<% else %>
  <h1 class="header">Breweries</h1>
  <ul>
    <% @searched_breweries.each do |b| %>
      <li class="brew_list"><%= link_to "#{b.name}", brewery_path(b) %></li>
    <% end %>
  </ul>
  <ul class="pagination" ><%= paginate @searched_breweries %>  </ul>
<% end %>
</div>


